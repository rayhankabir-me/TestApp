@model TestApp.Models.Employee
@{
    ViewData["Title"] = "Update";
}

<h1>Update Employee</h1>

@using (Html.BeginForm("Update", "Employee", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Gender)
            @Html.TextBoxFor(x => x.Gender, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
}
